<LoginPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'icones/bg.png'
        Label:
            text: 'Sales App [color=#99a3ad]System[/color]'
            bold: True
            markup: True
            pos_hint: {'right': 0.9, 'top': 0.9}
            size_hint: 0.8, 0.2
        TextInput:
            id: email_input
            hint_text: 'e-Mail'
            pos_hint: {'right': 0.9, 'top': 0.7}
            size_hint: 0.8, 0.1
        TextInput:
            id: password_input
            password: True
            hint_text: 'Password'
            pos_hint: {'right': 0.9, 'top': 0.55}
            size_hint: 0.8, 0.1
        Label:
            id: msg_login
            text: '[color=#ccd1d6]Log In[/color]'
            bold: True
            markup: True
            pos_hint: {'right': 0.9, 'top': 0.4}
            size_hint: 0.8, 0.2
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'icones/botao.png' if self.state == 'normal' else 'icones/botao_apertado.png'
            on_release: app.firebase.login(email_input.text, password_input.text)
            text: 'Log In'
            pos_hint: {'right': 0.45, 'top': 0.3}
            size_hint: 0.4, 0.2
        LabelButton:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'icones/botao.png' if self.state == 'normal' else 'icones/botao_apertado.png'
            on_release: app.firebase.create_account(email_input.text, password_input.text)
            text: 'Create an Account'
            pos_hint: {'right': 0.95, 'top': 0.3}
            size_hint: 0.4, 0.2