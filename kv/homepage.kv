<HomePage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'icones/bg.png'
        Label:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'icones/botao_fino.png'
            pos_hint: {'right':0.85, 'top': 0.95}
            size_hint: 0.7, 0.2
            text: 'Total Revenue: R$1.000,00'
            id: label_total_revenue
            markup: True
        # sales List
        ScrollView:
            pos_hint: {'right':1, 'top': 0.75}
            size_hint: 1, 0.63
            GridLayout:
                cols: 1
                id: sales_list
                size_hint_y: None
                spacing: 2, 2
                height: self.minimum_height
                row_default_height: '90dp'
                row_force_default: True

        # 3 buttons homepage
        GridLayout:
            rows:1
            pos_hint: {'right':1, 'top': 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex('#0085FF')
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                source: 'icones/add.png'
                on_release: app.change_screen('addsalespage')
            ImageButton:
                source: 'icones/salesman.png'
                on_release: app.change_screen('listsalespage')
            ImageButton:
                source: 'icones/settings.png'
                on_release: app.change_screen('adjustpage')